{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "helm-values": {
    "fileMatch": [
      "(^|/).*-values\\.yaml$",
      "(^|/).*\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "managers": [
        "argocd",
        "helm-values"
      ],
      "commitMessagePrefix": "{{baseDir}} ",
      "additionalBranchPrefix": "{{baseDir}}-",
      "matchPaths": [
        "dev/**",
        "staging/**"
      ]
    },
    {
      "managers": [
        "argocd",
        "helm-values"
      ],
      "commitMessagePrefix": "rke2-dev {{baseDir}} ",
      "additionalBranchPrefix": "{{baseDir}}-",
      "matchPaths": [
        "**rke2-dev**"
      ]
    },
    {
      "managers": [
        "argocd",
        "helm-values"
      ],
      "commitMessagePrefix": "{{baseDir}} ",
      "additionalBranchPrefix": "{{baseDir}}-",
      "matchPaths": [
        "preprod/**",
        "**rke2-preprod**"
      ]
    },
    {
      "managers": [
        "argocd",
        "helm-values"
      ],
      "commitMessagePrefix": "preprod ",
      "additionalBranchPrefix": "{{baseDir}}-",
      "matchPaths": [
        "**rke2-preprod**"
      ]
    },
    {
      "managers": [
        "argocd",
        "helm-values"
      ],
      "commitMessagePrefix": "{{baseDir}} ",
      "additionalBranchPrefix": "{{baseDir}}-",
      "matchPaths": [
        "prod/**"
      ]
    }
  ]
}